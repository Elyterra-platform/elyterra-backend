# Environment Configuration
ENV=development

# Database Configuration
DATABASE_URL=postgresql+psycopg://admin:admin@localhost:5432/realestate_dev
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=realestate_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.elyterrax.com

# API Configuration
API_VERSION=1.0.0-phase1
API_TITLE=ElyterraX API

# Security (Generate a secure secret key in production)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# Cloudflare R2 Storage Configuration (Phase 2.3)
# ==============================================================================
# IMPORTANT: Replace CHANGEME_* values with your Cloudflare R2 credentials
# See docs for setup instructions
R2_BUCKET_NAME=CHANGEME_your-bucket-name
R2_REGION=auto
R2_ACCESS_KEY=CHANGEME_your-r2-access-key
R2_SECRET_KEY=CHANGEME_your-r2-secret-key
R2_ENDPOINT_URL=CHANGEME_https://your-account-id.r2.cloudflarestorage.com

# Document Settings
SIGNED_URL_EXPIRY_SECONDS=3600    # 1 hour
MAX_DOCUMENT_SIZE_MB=50

# ==============================================================================
# API Request Logging (Phase 2.5)
# ==============================================================================
API_LOG_RETENTION_DAYS=365        # 12 months for legal compliance
LOG_SENSITIVE_ENDPOINTS=true

# ==============================================================================
# Project Configuration
# ==============================================================================
REQUIRE_PROJECT_APPROVAL=false    # true = admin approval required
