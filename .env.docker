# Docker Compose Environment Configuration
# Copy this to .env when using docker-compose

# Environment
ENV=development

# Database Configuration (Container Networking)
# Note: Use service name 'postgres' instead of 'localhost' in containers
DATABASE_URL=postgresql+psycopg://admin:admin@postgres:5432/realestate_dev
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=realestate_dev
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# API Configuration
API_PORT=8000
API_VERSION=1.0.0-phase1
API_TITLE=ElyterraX API

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.elyterrax.com

# Security (Generate a secure secret key in production)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
